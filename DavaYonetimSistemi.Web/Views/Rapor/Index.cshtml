@model IEnumerable<RaporLogDto>

@{
    ViewData["Title"] = "Rapor Geçmişi";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Rapor Geçmişi</h3>
        </div>
        <div class="card-body">
            <table id="raporTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Kullanıcı</th>
                        <th>Rapor Adı</th>
                        <th>Dosya Tipi</th>
                        <th>Dosya Adı</th>
                        <th>Oluşturma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td>@item.RaporAdi</td>
                            <td>@item.DosyaTipi</td>
                            <td>@item.DosyaAdi</td>
                            <td>@item.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <a href="/exports/@item.DosyaAdi" class="btn btn-primary btn-sm">
                                    <i class="fas fa-download"></i> İndir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#raporTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                order: [[4, 'desc']]
            });
        });
    </script>
} 